{
  "name": "create-template-folder",
  "version": "2.3.1",
  "description": "Template Directory Writer",
  "repository": "solx-oss/create-template-folder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "test": "nyc mocha -r  ts-node/register ./src/**/*.spec.ts --extensions ts",
    "dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "ts-node src/index.ts",
    "test:dev": "mocha --watch -r ts-node/register ./src/**/*.spec.ts --extensions ts --watch-files ./src/**/*.spec.ts",
    "pretest:ci": "yarn build"
  },
  "keywords": [
    "template",
    "templates",
    "boilerplate",
    "copy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^9.0.8",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.33",
    "@types/sinon": "^10.0.6",
    "chai": "^4.3.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^5.1.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.1",
    "sinon": "^12.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist/*"
  ],
  "nyc": {
    "reporter": "html",
    "check-coverage": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    },
    "exclude": "**/*.spec.ts",
    "include": "**/*.ts"
  }
}
